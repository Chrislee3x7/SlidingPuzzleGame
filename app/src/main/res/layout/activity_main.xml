<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Sliding Puzzle Game"
        android:textAlignment="center"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/home_screen_puzzle_display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="40dp"
        android:background="@drawable/puzzle_display_background"
        android:clickable="true"
        android:columnCount="3"
        android:padding="4dp"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@id/tips_panel"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_title">

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="1"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="2"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="3"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="4"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="5"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="6"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="7"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/puzzle_piece_background"
            android:clickable="false"
            android:text="8"
            android:textSize="30sp"
            android:layout_margin="1dp"/>

    </GridLayout>

    <Button
        android:id="@+id/tips_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_screen_puzzle_display"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/play_button_background"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_screen_puzzle_display" />

</androidx.constraintlayout.widget.ConstraintLayout>
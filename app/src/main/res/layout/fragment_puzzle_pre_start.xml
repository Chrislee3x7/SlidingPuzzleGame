<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_button_background"
        android:paddingHorizontal="40dp"
        android:paddingVertical="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pre_start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/pre_start_title"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/difficulty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pre_start_title"
            android:layout_marginTop="20dp"
            android:text="@string/difficulty_text"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/difficulty_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pre_start_title"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/difficulty_title"
            android:entries="@array/difficulty_choices" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/difficulty_title"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/cancel_button"
            android:text="✓"
            android:textStyle="bold"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/difficulty_title"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:text="✕"
            android:textStyle="bold"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>